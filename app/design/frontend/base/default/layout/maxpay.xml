<?xml version="1.0"?>
<layout>
    <!-- Layout settings for Maxpay controller -->
    <maxpay_payment_iframe>
        <reference name="head">
            <action method="setTitle">
                <title>Maxpay Checkout Payment form</title>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="maxpay/checkout_form_method_iframe" name="maxpay_widget"
                   template="maxpay/checkout/form/method/iframe.phtml">
                <label>Maxpay Checkout Payment form</label>
            </block>
        </reference>
    </maxpay_payment_iframe>
</layout>